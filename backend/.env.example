# Azure SQL Database Configuration
# Replace with your actual values
DB_SERVER=your-server.database.windows.net
DB_PORT=1433
DB_DATABASE=your_database_name
DB_USER=your_username
DB_PASSWORD=your_secure_password_here
DB_SSL=true

# Security Configuration
# Comma-separated list of allowed email domains for access
# Leave empty to allow all domains
ALLOWED_EMAIL_DOMAINS=arkgroupdmcc.com,example.com

# Server Configuration
PORT=3001
NODE_ENV=development

# Azure AD Authentication (required for API security)
# Get these from Azure Portal > App Registration
MSAL_TENANT_ID=your-tenant-id-guid
MSAL_CLIENT_ID=your-client-id-guid

# Business Central API (if using BC integration)
BC_TENANT_ID=your-bc-tenant-id
BC_CLIENT_ID=your-bc-client-id
BC_CLIENT_SECRET=your-bc-client-secret
BC_BASE_URL=https://api.businesscentral.dynamics.com/v2.0/your-tenant/Production/ODataV4/Company('Your%20Company')

# Frontend URL for CORS (production)
FRONTEND_URL=https://your-domain.com
